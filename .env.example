# Environment Variables Template
# Copy this file to .env.local and fill in your values

# GitHub API Token (for fetching repositories, contributions, etc.)
# Create a personal access token at: https://github.com/settings/tokens
# Required scopes: public_repo, read:user
SERVER_GITHUB_TOKEN=your_github_token_here

# Email Service (Resend)
# Sign up at: https://resend.com
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=your_email@example.com

# Analytics (Optional)
# PostHog
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry (Optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Vercel Analytics (Automatically configured in Vercel deployment)
# No environment variables needed

# Development
NODE_ENV=development

# Production URL
NEXT_PUBLIC_SITE_URL=https://pholiveira.dev
